<div class="min-h-screen flex items-center justify-center w-full dark:bg-gray-950 px-4">
  <div class="bg-white dark:bg-gray-900 shadow-md rounded-lg px-6 py-6 sm:px-8 sm:py-8 max-w-md sm:max-w-lg">
    <div class="text-center mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-red-600">Welcome Back</h2>
      <p class="mt-2 text-sm sm:text-base text-gray-600">
        Please sign in to your account
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div>
      <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com",
              class: "mt-1 block w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:outline-red-500" %>
    </div>

    <div>
      <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1 relative">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter your password",
                class: "block w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:outline-red-500" %>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-2 sm:space-y-0">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-red-600 hover:text-red-700" %>
    </div>

    <button type="submit" class="w-full flex justify-center py-2 px-4 sm:py-3 border border-transparent rounded-lg shadow-sm text-sm sm:text-base font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
      Sign In
    </button>
    <% end %>

    <p class="mt-6 text-center text-sm">
      Don't have an account?
      <%= link_to "Sign up now", new_registration_path(resource_name), class: "font-medium text-red-600 hover:text-red-700" %>
    </p>
  </div>
</div>
